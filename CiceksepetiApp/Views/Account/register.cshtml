@model RegisterDto

<head>
    <link rel="stylesheet" href="~/css/AccountCss.css">
</head>

<div class="centered">
    <div class="error" asp-validation-summary="All"></div>
    <div class="login-wrap">
        <h3 class="login__header">Register</h3>
        <form class="login__form" asp-action="Register" method="POST">
            <div class="username__area">
                <label asp-for="username">Kullanıcı Adı</label>
                <input type="text" asp-for="username" id="username-input">
            </div>
            <div class="email__area">
                <label asp-for="Email">Email</label>
                <input type="text" asp-for="Email" id="email-input">
            </div>

            <div class="password__area">
                <label asp-for="Password">Şifre</label>
                <input type="password" asp-for="Password" id="password-input">
            </div>

            <button class="submit-button" type="submit">Register</button>
        </form>
    </div>
    <div class="">
        Firma olarak <a class="link" style="color: var(--clr-primary)" asp-action="CorporateRegister"> buradan kayıt
            olun</a>
    </div>
</div>